<Page x:Class="FreeWinBackup.Views.SchedulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:FreeWinBackup.ViewModels"
      xmlns:models="clr-namespace:FreeWinBackup.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="SchedulesPage">
    <Page.DataContext>
        <vm:SchedulesViewModel />
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Schedules List -->
        <GroupBox Grid.Column="0" Header="Backup Schedules" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" ItemsSource="{Binding Schedules}" 
                          SelectedItem="{Binding SelectedSchedule}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="60"/>
                        <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="New" Command="{Binding NewScheduleCommand}"/>
                    <Button Content="Edit" Command="{Binding EditScheduleCommand}"/>
                    <Button Content="Delete" Command="{Binding DeleteScheduleCommand}"/>
                    <Button Content="Toggle Enabled" Command="{Binding ToggleEnabledCommand}"/>
                    <Button Content="Run Now" Command="{Binding RunNowCommand}" Background="#27AE60" Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Schedule Editor -->
        <GroupBox Grid.Column="1" Header="Schedule Details" Margin="5" 
                  IsEnabled="{Binding IsEditing}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10" DataContext="{Binding EditingSchedule}">
                    <Label Content="Schedule Name:"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Source Folder:"/>
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="Browse" 
                                Command="{Binding DataContext.BrowseSourceCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        <TextBox Text="{Binding SourceFolder, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

                    <Label Content="Destination Folder:"/>
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="Browse" 
                                Command="{Binding DataContext.BrowseDestinationCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        <TextBox Text="{Binding DestinationFolder, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

                    <Label Content="Frequency:"/>
                    <ComboBox SelectedItem="{Binding Frequency}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type models:FrequencyType}">
                                <models:FrequencyType>Daily</models:FrequencyType>
                                <models:FrequencyType>Weekly</models:FrequencyType>
                                <models:FrequencyType>Monthly</models:FrequencyType>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <Label Content="Run Time (HH:MM):"/>
                    <TextBox Text="{Binding RunTime, StringFormat=hh\\:mm, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Day of Week:"/>
                    <ComboBox SelectedItem="{Binding DayOfWeek}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type sys:DayOfWeek}">
                                <sys:DayOfWeek>Sunday</sys:DayOfWeek>
                                <sys:DayOfWeek>Monday</sys:DayOfWeek>
                                <sys:DayOfWeek>Tuesday</sys:DayOfWeek>
                                <sys:DayOfWeek>Wednesday</sys:DayOfWeek>
                                <sys:DayOfWeek>Thursday</sys:DayOfWeek>
                                <sys:DayOfWeek>Friday</sys:DayOfWeek>
                                <sys:DayOfWeek>Saturday</sys:DayOfWeek>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <Label Content="Day of Month (1-31):"/>
                    <TextBox Text="{Binding DayOfMonth, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="Services to Stop (one per line):"/>
                    <TextBox AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>

                    <CheckBox Content="Enable this schedule" IsChecked="{Binding IsEnabled}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Save" Command="{Binding DataContext.SaveScheduleCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                Background="#27AE60" Foreground="White"/>
                        <Button Content="Cancel" Command="{Binding DataContext.CancelEditCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Page>
