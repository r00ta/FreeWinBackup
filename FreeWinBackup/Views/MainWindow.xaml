<Window x:Class="FreeWinBackup.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FreeWinBackup.ViewModels"
        Title="FreeWinBackup - Windows Backup Scheduler" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Schedules" Command="{Binding NavigateToSchedulesCommand}" 
                        Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                <Button Content="Logs" Command="{Binding NavigateToLogsCommand}" 
                        Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                <Button Content="Settings" Command="{Binding NavigateToSettingsCommand}" 
                        Background="#3498DB" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Frame Grid.Row="1" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" />

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="{Binding CurrentPageTitle}" Foreground="White" FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>
