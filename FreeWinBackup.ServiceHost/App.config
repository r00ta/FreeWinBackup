<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  <appSettings>
    <!-- Log directory for the service. If not specified, defaults to %AppData%\FreeWinBackup -->
    <add key="LogDirectory" value="" />
    
    <!-- 
    Additional settings are stored in %AppData%\FreeWinBackup\settings.json
    including:
    - Backup schedules (source/destination folders, frequency, run time)
    - Services to stop/start during backups
    - Retention policy settings
    - Email notification settings (future)
    
    To configure backup schedules:
    1. Run the FreeWinBackup WPF application
    2. Create and configure schedules
    3. The service will automatically use those schedules
    
    OR manually edit %AppData%\FreeWinBackup\settings.json
    -->
  </appSettings>
</configuration>
